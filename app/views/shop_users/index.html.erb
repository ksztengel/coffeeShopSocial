<p id="notice"><%= notice %></p>

<h1>Listing Shop Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password hash</th>
      <th>Password salt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_users.each do |shop_user| %>
      <tr>
        <td><%= shop_user.name %></td>
        <td><%= shop_user.email %></td>
        <td><%= shop_user.password_hash %></td>
        <td><%= shop_user.password_salt %></td>
        <td><%= link_to 'Show', shop_user %></td>
        <td><%= link_to 'Edit', edit_shop_user_path(shop_user) %></td>
        <td><%= link_to 'Destroy', shop_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

